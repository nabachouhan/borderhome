<%- include('../partials/adminhead') %>
<%- include('../partials/loader') %>

<body>
  <div class="admin-sidebar" id="admin-sidebar">
    <h4 class="text-white mb-4">Border Monitoring</h4>
    <div class="mb-4">
      <i class="bi bi-person-circle me-2"></i><%= full_name %>
    </div>
    <a href="/admin/home"><i class="bi bi-grid"></i> Home</a>
    <a href="/admin/upload"><i class="bi bi-gem"></i> Upload</a>
    <a href="/admin/publish" class="active"><i class="bi bi-gem"></i>
      Publish</a>
    <a href="/admin/manage"><i class="bi bi-person"></i> Manage</a>
    <a href="" id="adminLogout"><i class="bi bi-journal-text"></i> Logout</a>
  </div>

  <!-- Main Content -->
  <div class="content" id="mainContent">
    <div class="themed-box topbar d-flex flex-wrap justify-content-between align-items-center gap-2 themed-box sticky-top">
      <div class="d-flex align-items-center gap-3">
        <i class="bi bi-list fs-3 cursor-pointer"  id="toggleSidebarBtn" style="cursor: pointer;"></i>
        <h4 class="mb-0">Dashboard</h4>

      </div>
      <div class="d-flex align-items-center gap-2">
        <i class="bi bi-bell me-2"></i>
        <i class="bi bi-gear"></i>
      </div>
    </div>
    <main class="main">
      <div class="container-fluid  p-4">
        <div class="card border-0 rounded themed-box">

          <div class="card-header">
            <h6 class="card-subtitle text-muted p-3 text-center">
              Publish Layer On Geoserver Aoutomatically List in Catalog
            </h6>
          </div>
          <div class="card border-0 rounded themed-box ">

            <form id="adminCatalogForm" class="form p-4" action="" method="post">
              <div class="row mt-3">
                <div class="col-md-12">
                  <div class="form-group first">
                    <label for="file_name">File Name</label>
                    <select id="file_name" class="form-control" name="file_name">
                      <option value>Select File Name</option>
                      <%
                                        catalogItems.forEach(function(item){%>
                      <option value="<%= item.file_name%>">
                        <%= item.file_name%> </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-12">
                  <div class="form-group first">
                    <label for="workspace">Geoserver Workspace
                      <span class="text-danger">*</span><span class="text-danger"></span></label>
                    <select class="form-control" id="workspace" name="workspace" required>
                      <option value="bordermonitoring">BorderMonitoring</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-12">
                  <div class="form-group first">
                    <label for="file_type">file-type
                      *</label>
                    <input type="text" class="form-control" id="file_type" name="file_type" required readonly>
                  </div>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-12">
                  <div class="form-group first">
                    <label for="theme">Geoserver Store/Theme
                      *</label>
                    <input type="text" class="form-control" id="theme" name="theme" required readonly>
                  </div>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-12">
                  <div class="form-group first">
                    <label for="title">Title *</label>
                    <input type="text" class="form-control" id="title" name="title" required readonly>
                  </div>
                </div>
              </div>

              <input type="submit" value="Add To Catalog" class="btn px-5 btn-primary mt-2">
            </form>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script src="/admin-assets/js/handlesubmits.js"></script>
  <script src="/admin-assets/js/adminPublish.js"></script>

  <%- include('../partials/footer') %>